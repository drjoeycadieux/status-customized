{
  "name": "status-page",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A modern status page for monitoring service uptime and performance",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "echo \"No tests specified\" && exit 0",
    "type-check": "tsc --noEmit",
    "monitor": "node scripts/monitor.js",
    "deploy": "npm run build && gh-pages -d dist",
    "deploy:netlify": "npm run build",
    "deploy:circleci": "npm run build",
    "start": "npm run preview",
    "audit-security": "npm audit --audit-level moderate"
  },
  "devDependencies": {
    "gh-pages": "^6.3.0",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "chart.js": "^4.5.0",
    "date-fns": "^4.1.0"
  }
}
